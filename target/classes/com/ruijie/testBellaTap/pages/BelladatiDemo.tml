<html t:type="layout" title="Belladati API demo"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

    <p>A demo for Belladati API</p>
    <p>${a}</p>
    <p>${s1}</p>
    
    <div><t:actionlink t:id="login">Log in</t:actionlink></div>
    
    <div><t:actionlink t:id="showdataset">Show Dataset</t:actionlink></div>
    
    <t:if test="loggedIn">
	    <h1>${dataset.name}</h1>
		<div>
			<div class="wrapper">
				<span class="title">Description</span>
				${dataset.description}
			</div>
			
			<div class="wrapper">
				<span class="title">Owner Name</span>
				${dataset.ownerName}
			</div>
			
			<div class="wrapper">
				<span class="title">Last Change</span>
				${dataset.lastChange}
			</div>
			
		</div>
	</t:if>

</html>
